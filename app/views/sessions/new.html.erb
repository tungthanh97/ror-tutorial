<%= form_with(scope: :session, url: login_path , local: true) do |form| %>

      <div class="field">
        <%= form.label :email %>
          <%= form.email_field :email, placeholder:"Enter your email" %>

      </div>

      <div class="field">
        <%= form.label :password %>
          <%= form.password_field :password, placeholder:"Enter your password" %>
      </div>

      <div class="actions">
        <%= form.submit "Login" %>
      </div>
      <% end %>

